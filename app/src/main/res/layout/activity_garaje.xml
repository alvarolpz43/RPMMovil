<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Login.Register">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/textViewRegistro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="40dp"
                android:text="Registro Motos"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/cardView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.52" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/WP_trasparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/curve_register"
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    android:paddingLeft="32dp"
                    android:paddingTop="52dp"
                    android:paddingRight="30dp"
                    android:paddingBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/curve_register"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="32dp"
                        android:paddingTop="52dp"
                        android:paddingRight="30dp"
                        android:paddingBottom="20dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:background="@color/white"
                            app:boxBackgroundMode="none"
                            app:endIconMode="clear_text"
                            app:hintEnabled="false">

                            <EditText
                                android:id="@+id/marcamoto"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Marca Moto"
                                android:inputType="text"
                                android:textColor="@color/black"
                                android:textColorHint="@color/Gray" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:background="@color/white"
                            app:boxBackgroundMode="none"
                            app:endIconMode="clear_text"
                            app:hintEnabled="false">

                            <EditText
                                android:id="@+id/modelomoto"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Modelo Moto"
                                android:inputType="text"
                                android:textColor="@color/black"
                                android:textColorHint="@color/Gray" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:background="@color/white"
                            app:boxBackgroundMode="none"
                            app:endIconMode="clear_text"
                            app:hintEnabled="false">

                            <EditText
                                android:id="@+id/cilindrajemoto"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Cilindraje Moto"
                                android:inputType="text"
                                android:textColor="@color/black"
                                android:textColorHint="@color/Gray" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:background="@color/white"
                            app:boxBackgroundMode="none"
                            app:endIconMode="clear_text"
                            app:hintEnabled="false">

                            <EditText
                                android:id="@+id/motonombre"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Nombre Moto"
                                android:inputType="text"
                                android:textColor="@color/black"
                                android:textColorHint="@color/Gray" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:background="@color/white"
                            app:boxBackgroundMode="none"
                            app:endIconMode="clear_text"
                            app:hintEnabled="false">

                            <EditText
                                android:id="@+id/versionmoto"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Version Moto"

                                android:inputType="number"
                                android:textColor="@color/black"
                                android:textColorHint="@color/Gray" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:background="@color/white"
                            app:boxBackgroundMode="none"
                            app:endIconMode="clear_text"
                            app:hintEnabled="false">

                            <EditText
                                android:id="@+id/consumo"

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="ConsumoX100Km"

                                android:inputType="number"
                                android:textColor="@color/black"
                                android:textColorHint="@color/Gray" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:scaleType="fitXY"
                            app:layout_constraintTop_toBottomOf="@+id/consumo" />


                        <Button
                            android:id="@+id/imageButton"
                            android:layout_marginTop="16dp"
                            android:backgroundTint="@color/ColorPrincipalAPP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Subir imagen" />

                        <Button
                            android:id="@+id/register"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="16dp"
                            android:backgroundTint="@color/ColorPrincipalAPP"
                            android:text="Registrar"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/consumo" />

                        <Button
                            android:id="@+id/garage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginEnd="16dp"
                            android:backgroundTint="@color/ColorPrincipalAPP"
                            android:text="Garage"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/button1" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>