<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Rmotos.UpdatesMotos.ViewsUpdateMotos">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="editar moto "
        tools:layout_editor_absoluteX="167dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/motonom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:inputType="text"
        android:text="Texto 1"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/motomodelo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Texto 2"
        android:textSize="14sp"
        android:inputType="text"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/motonom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/marcamoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Texto 3"
        android:textSize="14sp"
        android:inputType="text"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/motomodelo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/versionmoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Texto 4"
        android:inputType="text"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/marcamoto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/consumokmxg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Texto 5"
        android:inputType="number"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/versionmoto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/cilimoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="Texto 6"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/consumokmxg"
        app:layout_constraintVertical_bias="0.043" />

    <!-- AÃ±ade EditTexts adicionales para otros campos de la moto -->

</androidx.constraintlayout.widget.ConstraintLayout>
