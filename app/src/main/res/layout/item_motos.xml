<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp">

        <ImageView
            android:id="@+id/ivMotos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/motonom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Texto 1" />

            <TextView
                android:id="@+id/motomodelo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Texto 2" />

            <TextView
                android:id="@+id/marcamoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Texto 3" />

            <TextView
                android:id="@+id/versionmoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Texto 4" />

            <TextView
                android:id="@+id/consumokmxg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Texto 5" />

            <TextView
                android:id="@+id/cilimoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Texto 6" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>