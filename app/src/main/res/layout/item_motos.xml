<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/imageCardView"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textCardView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/ivMotos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/textCardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintStart_toEndOf="@+id/imageCardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/motonom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Texto 1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/motomodelo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/motomodelo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Texto 2"
                app:layout_constraintTop_toBottomOf="@+id/motonom"
                app:layout_constraintBottom_toTopOf="@+id/marcamoto"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/marcamoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Texto 3"
                app:layout_constraintTop_toBottomOf="@+id/motomodelo"
                app:layout_constraintBottom_toTopOf="@+id/versionmoto"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/versionmoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Texto 4"
                app:layout_constraintTop_toBottomOf="@+id/marcamoto"
                app:layout_constraintBottom_toTopOf="@+id/consumokmxg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/consumokmxg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Texto 5"
                app:layout_constraintTop_toBottomOf="@+id/versionmoto"
                app:layout_constraintBottom_toTopOf="@+id/cilimoto"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/cilimoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Texto 6"
                app:layout_constraintTop_toBottomOf="@+id/consumokmxg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
